\newcommand{\makepreface}
{
  \newtoggle{pora}
  \togglefalse{pora}
  \ifthenelse{\equal{\preface}{}}{}{\toggletrue{pora}}
  \ifthenelse{\equal{\tocack}{}}{\toggletrue{pora}}{}
  \iftoggle{pora}{\newpage}{}
  
  \ifthenelse{\equal{\preface}{}}{}{
    \section*{\prefacetitle}
    {\RaggedRight \prefacefontsize \fontseries{l}\selectfont \textsf{\preface}}
    }
  \ifthenelse{\equal{\tocack}{}}{}{
    \section*{\tocacktitle}
    {\RaggedRight \prefacefontsize \fontseries{l}\selectfont \textsf{\tocack}}
    }

  \iftoggle{pora}{\newpage}{}

