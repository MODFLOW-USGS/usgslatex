\newcommand{\flyfontfamilyA}
{\sffamily}

\newcommand{\flyfontfamilyB}
{\sffamily \fontseries{l}\selectfont}

\newcommand{\flyfontLARGE}
{\fontsize{14pt}{16pt}\selectfont}

