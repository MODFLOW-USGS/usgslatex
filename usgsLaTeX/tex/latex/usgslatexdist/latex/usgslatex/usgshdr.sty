\fancypagestyle{title}{
   \fancyhead{} % clear header fields
   \fancyfoot{} % clear footer fields
   \renewcommand\headrulewidth{0pt}
   \renewcommand\footrulewidth{0pt}
}
\fancypagestyle{fly}{
   \fancyhead{} % clear header fields
   \fancyfoot{} % clear footer fields
   \renewcommand\headrulewidth{0pt}
   \renewcommand\footrulewidth{0pt}
}
\fancypagestyle{preface}{
   \fancyhead{} % clear header fields
   \fancyfoot{} % clear footer fields
   \fancyhead[RO]{\textbf{\textsf{\headerfontsize \rightmark \quad \thepage}}}
   \fancyhead[LE]{\textbf{\textsf{\headerfontsize \thepage}}}
   \renewcommand\headrulewidth{0pt}
   \renewcommand\footrulewidth{0pt}
}
\fancypagestyle{tocpages}{
   \fancyhead{} % clear header fields
   \fancyfoot{} % clear footer fields
   \fancyhead[RO]{\textbf{\textsf{\headerfontsize \rightmark \quad \thepage}}}
   \fancyhead[LE]{\textbf{\textsf{\headerfontsize \thepage}}}
   \renewcommand\headrulewidth{0pt}
   \renewcommand\footrulewidth{0pt}
}

\fancypagestyle{body}{
   \fancyhead{} % clear header fields
   \fancyfoot{} % clear footer fields
   \fancyhead[RO]{\textbf{\textsf{\headerfontsize \rightmark \quad \thepage}}}
   \fancyhead[LE]{\textbf{\textsf{\headerfontsize \thepage \quad \headerreporttitle}}}
   \renewcommand\headrulewidth{\rulewidth}
   \renewcommand\footrulewidth{\bodyfootrulewidth}
}
\fancypagestyle{bodyplain}{
   \fancyhead{} % clear header fields
   \fancyfoot{} % clear footer fields
   \renewcommand\headrulewidth{\firstpagerulewidth}
   \renewcommand\footrulewidth{\firstpagerulewidth}
}
\fancypagestyle{appendix}{
   \fancyhead{} % clear header fields
   \fancyfoot{} % clear footer fields
   \fancyhead[RO]{\textbf{\textsf{\headerfontsize \rightmark \quad \thepage}}}
   \fancyhead[LE]{\textbf{\textsf{\headerfontsize \thepage \quad \headerreporttitle}}}
   \renewcommand\headrulewidth{\rulewidth}
   \renewcommand\footrulewidth{\bodyfootrulewidth}
}
\fancypagestyle{appendixpage}{
   \fancyhead{} % clear header fields
   \fancyfoot{} % clear footer fields
   \fancyhead[RO]{\textbf{\textsf{\headerfontsize \rightmark}}}
   \fancyhead[LE]{\textbf{\textsf{\headerfontsize \thepage \quad \headerreporttitle}}}
   \renewcommand\headrulewidth{\rulewidth}
   \renewcommand\footrulewidth{\bodyfootrulewidth}
}

\fancypagestyle{toc}{
   \fancyhead{} % clear header fields
   \fancyfoot{} % clear footer fields
   \renewcommand\headrulewidth{\rulewidth}
   %\renewcommand\footrulewidth{\rulewidth}
   \fancyhead[RO,LE]{\textbf{\textsf{\headerfontsize \thepage}}}
}
\fancypagestyle{backofreport}{
   \fancyhead{} % clear header fields
   \renewcommand\headrulewidth{\rulewidth}
   \renewcommand\footrulewidth{\rulewidth}
   \fancyhead[LE]{\textbf{\textsf{\headerfontsize \thepage \quad \headerreporttitle}}}
}


